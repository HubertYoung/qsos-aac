<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="@dimen/dp_4"
    app:cardBackgroundColor="@color/grey_tran"
    app:cardCornerRadius="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_tc_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/tc_img_recommend"
            android:maxHeight="@dimen/dp_400"
            android:minHeight="@dimen/dp_100"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/iv_item_tc_feed_photos"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_4"
            android:background="@color/transparentLow"
            android:contentDescription="@string/tc_img_photos"
            android:padding="@dimen/dp_2"
            android:src="@drawable/icon_photos" />

        <TextView
            android:id="@+id/tv_item_tc_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparentLow"
            android:padding="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>
</android.support.v7.widget.CardView>